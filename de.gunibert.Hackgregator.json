{
    "app-id": "de.gunibert.Hackgregator",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "hackgregator",
    "finish-args": [
        "--share=ipc", "--socket=x11",
        "--socket=wayland",
        "--share=network",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name" : "libhandy",
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/GNOME/libhandy/-/archive/0.82.0/libhandy-0.82.0.tar.gz",
                    "sha256" : "cf73a1f1dec6347627b0d12d70c12ce7f9ce947066280e57654ffa13fe3b71c1"
                }
            ]
        },
        {
            "name": "hackgregator",
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release"
            ],
            "sources": [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/gunibert/hackgregator.git",
                    "tag" : "0.3.0"
                }
            ]
        }
    ]
}
